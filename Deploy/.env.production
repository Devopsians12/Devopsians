# Production Environment Configuration
DEPLOY_ENV=production
NODE_ENV=production

# Docker Configuration
DOCKERHUB_USERNAME=devopsians
IMAGE_TAG=latest

# Ports
FRONTEND_PORT=80
BACKEND_PORT=3030
MONGO_PORT=27017

# Database - IMPORTANT: Change all credentials!
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MONGO_DATABASE=devopsians
MONGO_URL=mongodb://admin:CHANGE_THIS_STRONG_PASSWORD@mongodb:27017/devopsians?authSource=admin

# Backend
BACKEND_HOST=0.0.0.0
LOG_LEVEL=warn

# JWT - CRITICAL: Use strong secret!
JWT_SECRET_KEY=CHANGE_THIS_TO_STRONG_RANDOM_SECRET
JWT_EXPIRES=1d

# Frontend
FRONTEND_URL=https://devopsians.com
VITE_API_URL=https://api.devopsians.com

# Email Configuration
EMAIL_USER=noreply@devopsians.com
EMAIL_PASS=your-email-app-password
