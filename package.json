{
  "name": "devopsians",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "nodemon backend/index.js",
    "dev": "concurrently --kill-others-on-fail \"cd frontend && vite\" \"nodemon backend/index.js\"",
    "dev:frontend": "cd frontend && vite --port 5173",
    "dev:backend": "nodemon backend/index.js",
    "build": "cd frontend && vite build",
    "lint": "eslint .",
    "clean": "rimraf node_modules **/node_modules",
    "postinstall": "npm run setup",
    "setup": "npm install --prefix frontend && npm install --prefix backend"
  },
  "dependencies": {
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.7",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "eslint-config-react-app": "^7.0.1",
    "prettier": "^3.4.1"
  }
}
